{
	"$schema": "https://biomejs.dev/schemas/2.3.6/schema.json",
	"files": {
		"includes": [
			"**/*.js",
			"**/*.ts",
			"!node_modules",
			"!dist"
		]
	},
	"formatter": {
		"enabled": true
	},
	"linter": {
		"enabled": true
	},
	"assist": {
		"actions": {
			"source": {
				"organizeImports": "on"
			}
		}
	}
}
